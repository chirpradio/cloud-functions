{
    "env": {
        "commonjs": true,        
        "jest": true,
        "node": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 13
    },
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "error"
    }
}
